description "Selenium Standalone server"

start on runlevel [345]
stop on shutdown

# Automatically restart process if crashed
respawn

setuid selenium

exec xvfb-run -a -s '-screen 0 <%= @fbsize %>' java -Djava.security.egd=file:/dev/./urandom -Xmx<%= @xmx %> -jar <%= @selenium %> -port <%= @port %> <%= @options %> >> <%= @log %> 2>&1
